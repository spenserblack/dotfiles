root = true

[*]
end_of_line = LF
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# AutoHotkey
[*.ahk]
end_of_line = CRLF
indent_style = space
indent_size = 4

# Batch files
[*.{bat,cmd}]
end_of_line = CRLF
indent_style = tab

# CSS
[*.css]
indent_style = space
indent_size = 2

# Fish
[*.fish]
indent_style = space
indent_size = 4

# Go
[*.go]
indent_style = tab

# HTML
[*.html]
indent_style = space
indent_size = 2

# JavaScript
[*.{js,cjs,mjs,jsx}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# Lua
[*.lua]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# PowerShell
[*.ps1]
end_of_line = CRLF
indent_style = space
indent_size = 4

# Pug
[*.pug]
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4

# Ruby
[*.rb]
indent_style = space
indent_size = 2

# Rust
[*.rs]
indent_style = space
indent_size = 4

# Sass
[*.scss]
indent_style = space
indent_size = 2

# Shell
[*.{sh,bash}]
indent_style = tab

# Stylus
[*.styl]
indent_style = space
indent_size = 2

# Svelte
[*.svelte]
indent_style = space
indent_size = 2

# TypeScript
[*.{ts,tsx}]
indent_style = space
indent_size = 2

# Vue
[*.vue]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2
